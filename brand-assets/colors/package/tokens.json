{
  "$schema": "https://schemas.figma.com/design-tokens/v1",
  "name": "KBYG Brand Colors",
  "description": "Official brand color palette for KBYG",
  "colors": {
    "brand": {
      "gtm-blue": {
        "$value": "#3b82f6",
        "$type": "color",
        "$description": "Primary brand color for GTM-related features"
      },
      "conference-purple": {
        "$value": "#8b5cf6",
        "$type": "color",
        "$description": "Conference and event-related features"
      },
      "revenue-cyan": {
        "$value": "#06b6d4",
        "$type": "color",
        "$description": "Revenue and financial metrics"
      },
      "success-green": {
        "$value": "#10b981",
        "$type": "color",
        "$description": "Success states and positive feedback"
      },
      "error-red": {
        "$value": "#ef4444",
        "$type": "color",
        "$description": "Error states and critical alerts"
      }
    },
    "gray": {
      "900": {
        "$value": "#1f2937",
        "$type": "color",
        "$description": "Darkest gray - primary text"
      },
      "800": {
        "$value": "#374151",
        "$type": "color",
        "$description": "Dark gray - secondary backgrounds"
      },
      "600": {
        "$value": "#6b7280",
        "$type": "color",
        "$description": "Medium gray - secondary text"
      },
      "400": {
        "$value": "#9ca3af",
        "$type": "color",
        "$description": "Light gray - tertiary text"
      },
      "300": {
        "$value": "#d1d5db",
        "$type": "color",
        "$description": "Very light gray - borders"
      },
      "100": {
        "$value": "#f3f4f6",
        "$type": "color",
        "$description": "Lightest gray - backgrounds"
      }
    },
    "semantic": {
      "primary": {
        "$value": "{colors.brand.gtm-blue}",
        "$type": "color"
      },
      "secondary": {
        "$value": "{colors.brand.conference-purple}",
        "$type": "color"
      },
      "success": {
        "$value": "{colors.brand.success-green}",
        "$type": "color"
      },
      "error": {
        "$value": "{colors.brand.error-red}",
        "$type": "color"
      },
      "info": {
        "$value": "{colors.brand.revenue-cyan}",
        "$type": "color"
      }
    }
  }
}
